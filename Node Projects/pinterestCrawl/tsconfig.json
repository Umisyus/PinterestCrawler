{
    "extends": "@apify/tsconfig",
    "compilerOptions": {
        "module": "ESNext",
        "target": "ESNext",
        "outDir": "dist",
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "noUnusedLocals": false,
        "lib": [
            "DOM",
            "DOM.Iterable",
            "ESNext.Promise"
        ]
    },
    "include": [
        "./src/**/*",
        "exclusions.json"
    ],
    "exclude": [
        "node_modules",
        "./src/storage/**/*"
    ]
}
